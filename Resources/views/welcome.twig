{% extends "twig/layout.twig" %}

{% block title %}Welcome to
	{{ framework }}
{% endblock %}

{% block content %}
	<div class="hero">
		<h1 class="title">
			Welcome to
			<span>Comibyte</span>
		</h1>
		<p class="subtitle">A lightweight, modern PHP framework for rapid development</p>
	</div>

	<div class="grid">
		<div class="card">
			<h3>ðŸš€ Getting Started</h3>
			<p>Learn how to build your first application with Comibyte framework in minutes.</p>
			<a href="/getting-started" class="btn">Get Started</a>
		</div>

		<div class="card">
			<h3>ðŸ“š Documentation</h3>
			<p>Comprehensive guides and API references for all framework features.</p>
			<a href="/docs" class="btn">Read Docs</a>
		</div>

		<div class="card">
			<h3>ðŸ“° Blog</h3>
			<p>Tutorials, tips, and best practices for web development.</p>
			<a href="/blog" class="btn">Read Blog</a>
		</div>

		<div class="card">
			<h3>âš¡ Features</h3>
			<p>Discover the powerful features that make development easier.</p>
			<a href="/features" class="btn">View Features</a>
		</div>
	</div>

	<div class="section">
		<h2>Key Features</h2>
		<ul class="features-list">
			{% for feature in features %}
				<li class="feature-item">{{ feature }}</li>
			{% endfor %}
		</ul>
	</div>

	<div class="section">
		<h2>Benefits</h2>
		<ul class="benefits-list">
			{% for benefit in benefits %}
				<li class="benefit-item">{{ benefit }}</li>
			{% endfor %}
		</ul>
	</div>

	<div class="cta">
		<p>Ready to start building amazing applications?</p>
		<a href="/docs" class="btn">View Documentation</a>
	</div>

	<style>
		.hero {
			text-align: center;
			margin-bottom: 3rem;
		}

		.subtitle {
			font-size: 1.5rem;
			color: #718096;
			max-width: 600px;
			margin: 0 auto;
		}

		.btn {
			display: inline-block;
			background: #667eea;
			color: white;
			padding: 0.5rem 1rem;
			border-radius: 0.25rem;
			text-decoration: none;
			font-weight: 600;
			margin-top: 1rem;
			transition: background 0.2s ease;
		}

		.btn:hover {
			background: #5a67d8;
		}

		.section {
			margin: 3rem 0;
		}

		.section h2 {
			color: #fff;
			margin-bottom: 1.5rem;
			padding-bottom: 0.5rem;
			border-bottom: 2px solid #4a5568;
		}

		.features-list,
		.benefits-list {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 1rem;
			list-style: none;
		}

		.feature-item,
		.benefit-item {
			background: #2d3748;
			padding: 1.5rem;
			border-radius: 0.5rem;
			border-left: 4px solid #667eea;
			transition: transform 0.2s ease, box-shadow 0.2s ease;
		}

		.feature-item:hover,
		.benefit-item:hover {
			transform: translateY(-3px);
			box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		}

		.cta {
			text-align: center;
			margin: 3rem 0;
			padding: 2rem;
			background: #2d3748;
			border-radius: 0.5rem;
		}
	</style>
{% endblock %}
